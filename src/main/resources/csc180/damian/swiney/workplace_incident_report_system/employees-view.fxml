<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.StackPane?>

<?import java.net.URL?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<BorderPane xmlns:fx="http://javafx.com/fxml" prefHeight="600.0" prefWidth="700.0" styleClass="pane"
            fx:controller="csc180.damian.swiney.workplace_incident_report_system.EmployeesPageController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <top>
        <Label fx:id="EmployeePaneTitle" styleClass="pageTitleLabel">Employees</Label>
    </top>

    <left>

    </left>

    <right>
        <Button text="+" styleClass="addItemButton" onAction="#onPlusClicked"/>
    </right>

    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <TableView fx:id="employeeTable" layoutX="14.0" layoutY="14.0" prefHeight="200.0" prefWidth="272.0">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="90.0" text="EmployeeID" />
                    <TableColumn fx:id="firstNameColumn" prefWidth="90.0" text="First Name" />
                    <TableColumn fx:id="lastNameColumn" prefWidth="90.0" text="Last Name" />
                    <TableColumn fx:id="departmentColumn" prefWidth="90.0" text="Department" />
                </columns>
            </TableView>


        </VBox>
    </center>
</BorderPane>